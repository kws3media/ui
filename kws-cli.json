{
  "generators":{
    "story":{
      "name": "Generate story",
      "description":"Will generate a story file",
      "command": "node scripts/generators story ${story} ${category} --colors",

      "Form":{
        "validate": {
          "story": "required",
          "category": "required"
        },
        "message": "Please provide the following information:",
        "choices": [
          { "name": "story", "message": "Story Name", "initial": "" },
          { "name": "category", "message": "Category Name", "initial": "New" }
        ]
      }
    }
  }
}