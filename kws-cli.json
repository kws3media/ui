{
  "generators": {
    "story": {
      "name": "Generate story",
      "description": "Will generate a story file",
      "command": "node scripts/generators story ${story} ${category} ${decorator} ${slot} --colors",
      "Questions": [
        {
          "type": "form",
          "validate": {
            "story": "required",
            "category": "required"
          },
          "message": "Please provide the following information:",
          "choices": [
            {
              "name": "story",
              "message": "Story Name",
              "initial": ""
            },
            {
              "name": "category",
              "message": "Category Name",
              "initial": "New"
            }
          ]
        },
        {
          "type": "select",
          "name": "decorator",
          "message": "Does this need a decorator?",
          "choices": [
            "Yes",
            "No"
          ]
        },
        {
          "type": "select",
          "name": "slot",
          "message": "Does the Decorator use Slots?",
          "choices": [
            "Yes",
            "No"
          ]
        }
      ]
    }
  }
}