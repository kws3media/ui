{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "globalReturn": false,
      "impliedStrict": false,
      "jsx": false
    }
  },
  "ecmaFeatures": { "jsx": true },
  "plugins": ["kws-eslint-rules"],
  "extends": ["eslint:recommended", "plugin:@ota-meshi/svelte/recommended"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser"
    }
  ],
  "rules": {
    "semi": ["error", "always"],
    "eqeqeq": ["error", "smart"],
    "@ota-meshi/svelte/no-dupe-else-if-blocks": "error",
    "@ota-meshi/svelte/no-dynamic-slot-name": "error",
    "@ota-meshi/svelte/no-not-function-handler": "error",
    "@ota-meshi/svelte/no-object-in-text-mustaches": "error",
    "@ota-meshi/svelte/no-at-html-tags": "error",
    "@ota-meshi/svelte/no-at-debug-tags": "error",
    "@ota-meshi/svelte/no-unused-svelte-ignore": "error",
    "@ota-meshi/svelte/no-inner-declarations": "error",
    "@ota-meshi/svelte/comment-directive": "error",
    "@ota-meshi/svelte/system": "error",
    "@ota-meshi/svelte/button-has-type": "error",
    "kws-eslint-rules/no-date": "error",
    "kws-eslint-rules/no-scaffold": "error"
  }
}
